<% @post_feed.each do |post| %>
    <%= render partial: 'layouts/post_block', locals: {post: post} %>
    <div class="comments">
        <% post.comments.each do |comment| %>
            <div class="content">
                <% if comment.creator.picture? %>
                    <%= image_tag "#{comment.creator.picture}", class: :img %>
                <% else %> 
                    <%= image_tag "default.png", class: :img %>
                <% end %>
                <%= link_to "#{comment.creator.first_name} #{comment.creator.last_name}", user_path(post.creator.id) %>
                <%= " - #{comment.content}" %>
            </div>
            <div class="stats">
                <%= time_ago_in_words(comment.created_at) %> ago
                <% if post.creator.id = current_user.id %>
                    <%= link_to "Delete", comment_path(post.id), method: :delete %>
                <% end %>
            </div>
        <% end %> 
        <%= form_for :comment, url: comments_path, method: :post do |f| %>
            <%= f.text_area :content, placeholder: "What do you think..." %>
            <%= f.hidden_field :post_id, value: post.id %>
            <%= f.submit "Write a comment" %>
        <% end %>
    </div>
<% end %>
