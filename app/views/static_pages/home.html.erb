<%= form_for :new_post, url: posts_url, method: :post do |f| %>
    <div class="form-group">
        <div class="row">
            <%= f.text_area :content, placeholder: "Whats on your mind?", class: "form-control" %> 
        </div>
        <div class="row">
            <%= f.file_field :picture, class: "form-control col-md-4" %>
            <%= f.submit "Post", class: "form-control btn btn-outline-info col-md-8" %>
        </div>
    </div>
<% end %>
<%= render "layouts/posts_feed" %> 
<%= will_paginate @post_feed, class: "justify-content-end" %>
